<!--webview.wxml-->
<view class="container">
  <!-- 加载状态 -->
  <view wx:if="{{isLoading}}" class="loading-container">
    <view class="loading-spinner"></view>
    <text class="loading-text">正在加载完整版...</text>
  </view>
  
  <!-- 错误状态 -->
  <view wx:if="{{hasError}}" class="error-container">
    <view class="error-icon">⚠️</view>
    <text class="error-title">页面加载失败</text>
    <text class="error-desc">网络连接异常，请检查网络后重试</text>
    <button class="retry-btn" bindtap="retryLoad">重新加载</button>
  </view>
  
  <!-- Web-view 组件 -->
  <web-view 
    wx:if="{{!hasError}}"
    src="{{webUrl}}" 
    bindmessage="onMessage" 
    binderror="onError" 
    bindload="onLoad"
    class="webview-component"
  ></web-view>
</view>

