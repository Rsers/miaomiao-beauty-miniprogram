/* 用户流程图页面样式 */

/* 页面容器 */
.userflow-container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 渐变背景 */
.userflow-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #fdf2f8 0%, #f3e8ff 100%);
  z-index: 1;
}

/* 装饰元素 */
.decorative-elements {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 2;
}

.decorative-circle {
  position: absolute;
  background: rgba(244, 114, 182, 0.1);
  border-radius: 50%;
  filter: blur(120rpx);
}

.decorative-circle-1 {
  width: 512rpx;
  height: 512rpx;
  top: -256rpx;
  right: 256rpx;
}

.decorative-circle-2 {
  width: 384rpx;
  height: 384rpx;
  bottom: 192rpx;
  left: -192rpx;
}

/* 浮动爱心动画 */
.floating-hearts {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.heart-animation {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.3;
  animation: float-heart 6s infinite ease-in-out;
}

.heart-0 { top: 20%; left: 10%; animation-delay: 0s; }
.heart-1 { top: 40%; right: 15%; animation-delay: 1.2s; }
.heart-2 { top: 60%; left: 20%; animation-delay: 2.4s; }
.heart-3 { top: 80%; right: 25%; animation-delay: 3.6s; }
.heart-4 { top: 30%; left: 50%; animation-delay: 4.8s; }

@keyframes float-heart {
  0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); opacity: 0.3; }
  25% { transform: translateY(-40rpx) translateX(20rpx) rotate(5deg); opacity: 0.6; }
  50% { transform: translateY(-20rpx) translateX(-10rpx) rotate(-3deg); opacity: 0.4; }
  75% { transform: translateY(-60rpx) translateX(30rpx) rotate(8deg); opacity: 0.7; }
}

/* 手机容器 */
.mobile-container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  min-height: 100vh;
  position: relative;
  z-index: 10;
  box-sizing: border-box;
}

/* 顶部导航 */
.top-navigation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 96rpx 32rpx 32rpx;
  position: relative;
  z-index: 20;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(244, 114, 182, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8px);
  transition: background-color 0.2s ease;
}

.nav-btn:active {
  background: rgba(244, 114, 182, 0.3);
}

.nav-icon {
  font-size: 40rpx;
  color: #ec4899;
  font-weight: bold;
}

.nav-center {
  text-align: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ec4899;
  display: block;
}

.nav-subtitle {
  font-size: 28rpx;
  color: rgba(236, 72, 153, 0.8);
  display: block;
}

.nav-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(244, 114, 182, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8px);
  transition: background-color 0.2s ease;
}

.action-btn:active {
  background: rgba(244, 114, 182, 0.3);
}

.action-icon {
  font-size: 40rpx;
  color: #ec4899;
}

/* 滚动内容 */
.scroll-content {
  height: calc(100vh - 200rpx);
  padding-bottom: 32rpx;
}

.content-container {
  padding: 0 32rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  margin-bottom: 48rpx;
}

.header-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(236, 72, 153, 0.3);
}

.heart-icon {
  font-size: 48rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  display: block;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 病毒式增长指标 */
.metrics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.metric-card {
  background: linear-gradient(135deg, #ffffff 0%, #fdf2f8 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(244, 114, 182, 0.2);
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.metric-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.metric-emoji {
  font-size: 40rpx;
}

.metric-content {
  flex: 1;
}

.metric-count {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.metric-label {
  font-size: 28rpx;
  color: #6b7280;
}

/* 主要流程图 */
.flow-diagram {
  margin-bottom: 48rpx;
}

.flow-step {
  margin-bottom: 48rpx;
}

.step-card {
  display: flex;
  align-items: flex-start;
  gap: 32rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border-left: 8rpx solid #ec4899;
}

.step-icon-section {
  flex-shrink: 0;
  text-align: center;
}

.step-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 16rpx;
}

.step-icon.color-pink {
  background: linear-gradient(135deg, #ec4899 0%, #ec4899 100%);
}

.step-icon.color-purple {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
}

.step-icon.color-blue {
  background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
}

.step-icon.color-green {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.step-icon.color-orange {
  background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
}

.step-icon.color-red {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.step-emoji {
  font-size: 64rpx;
}

.step-badge {
  background: #f3f4f6;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.badge-text {
  font-size: 24rpx;
  color: #6b7280;
}

.step-content {
  flex: 1;
}

.step-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.step-info {
  flex: 1;
}

.step-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.step-subtitle {
  font-size: 28rpx;
  color: #ec4899;
  display: block;
  margin-bottom: 16rpx;
}

.step-description {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.5;
  margin-bottom: 24rpx;
}

.step-badges {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.step-badge-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.social-badge {
  background: #fce7f3;
}

.viral-badge {
  background: #f3e8ff;
}

.reward-badge {
  background: #fef3c7;
}

.retention-badge {
  background: #dcfce7;
}

.badge-emoji {
  font-size: 24rpx;
}

/* 手机屏幕模拟 */
.mobile-mockup {
  margin-left: 32rpx;
  flex-shrink: 0;
}

.mockup-screen {
  width: 192rpx;
  height: 320rpx;
  background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
  border-radius: 24rpx;
  padding: 8rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

.mockup-content {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #fdf2f8 0%, #f3e8ff 100%);
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
}

.mockup-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.mockup-text {
  font-size: 24rpx;
  color: #6b7280;
  text-align: center;
}

/* 流程箭头 */
.flow-arrow {
  display: flex;
  justify-content: center;
  margin: 32rpx 0;
}

.arrow-icon {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(236, 72, 153, 0.3);
}

.arrow-emoji {
  font-size: 32rpx;
}

/* 病毒式增长可视化 */
.viral-growth-section {
  background: linear-gradient(135deg, #fdf2f8 0%, #f3e8ff 100%);
  border-radius: 32rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  border: 2rpx solid rgba(244, 114, 182, 0.2);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1f2937;
  text-align: center;
  margin-bottom: 48rpx;
}

.growth-visualization {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  flex-wrap: wrap;
}

.growth-rings {
  position: relative;
}

.ring {
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ring-outer {
  width: 256rpx;
  height: 256rpx;
  background: linear-gradient(135deg, #f472b6 0%, #8b5cf6 100%);
  opacity: 0.3;
  animation: pulse 2s infinite;
}

.ring-middle {
  width: 192rpx;
  height: 192rpx;
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  opacity: 0.6;
}

.ring-inner {
  width: 128rpx;
  height: 128rpx;
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
}

.ring-icon {
  font-size: 64rpx;
}

.growth-plus {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 48rpx;
  height: 48rpx;
  background: #fbbf24;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plus-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #92400e;
}

.growth-arrow {
  font-size: 48rpx;
}

.growth-metric {
  text-align: center;
}

.metric-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ec4899;
  display: block;
  margin-bottom: 8rpx;
}

.metric-label {
  font-size: 28rpx;
  color: #6b7280;
}

.final-result {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(244, 114, 182, 0.2);
  text-align: center;
}

.result-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #8b5cf6;
  display: block;
  margin-bottom: 8rpx;
}

.result-label {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  gap: 4rpx;
}

.star-icon {
  font-size: 32rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.action-btn {
  width: 100%;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.primary-btn {
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 8rpx 32rpx rgba(236, 72, 153, 0.3);
}

.primary-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #db2777 0%, #7c3aed 100%);
}

.secondary-btn {
  background: white;
  color: #ec4899;
  border: 2rpx solid #ec4899;
}

.secondary-btn:active {
  background: #fdf2f8;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 动画效果 */
@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.05); opacity: 0.5; }
}

/* 响应式布局优化 */
@media screen and (max-width: 320px) {
  .mobile-container {
    max-width: 100%;
  }
  
  .content-container {
    padding: 0 16rpx;
  }
  
  .metrics-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }
  
  .step-card {
    flex-direction: column;
    text-align: center;
  }
  
  .growth-visualization {
    flex-direction: column;
    gap: 16rpx;
  }
}

@media screen and (min-width: 750px) {
  .mobile-container {
    max-width: 750rpx;
  }
  
  .content-container {
    padding: 0 32rpx;
  }
  
  .metrics-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
  }
  
  .step-card {
    flex-direction: row;
  }
  
  .growth-visualization {
    flex-direction: row;
    gap: 32rpx;
  }
}
