/* 积分商城页面样式 */

/* 页面容器 */
.mall-container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 渐变背景 */
.mall-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #f472b6 0%, #ec4899 50%, #8b5cf6 100%);
  z-index: 1;
}

/* 装饰元素 */
.decorative-elements {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 2;
}

.decorative-circle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  filter: blur(120rpx);
}

.decorative-circle-1 {
  width: 512rpx;
  height: 512rpx;
  top: -256rpx;
  right: 256rpx;
}

.decorative-circle-2 {
  width: 384rpx;
  height: 384rpx;
  bottom: 192rpx;
  left: -192rpx;
}

/* 浮动爱心动画 */
.floating-hearts {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.heart-animation {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.3;
  animation: float-heart 6s infinite ease-in-out;
}

.heart-0 { top: 20%; left: 10%; animation-delay: 0s; }
.heart-1 { top: 40%; right: 15%; animation-delay: 1.2s; }
.heart-2 { top: 60%; left: 20%; animation-delay: 2.4s; }
.heart-3 { top: 80%; right: 25%; animation-delay: 3.6s; }
.heart-4 { top: 30%; left: 50%; animation-delay: 4.8s; }

@keyframes float-heart {
  0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); opacity: 0.3; }
  25% { transform: translateY(-40rpx) translateX(20rpx) rotate(5deg); opacity: 0.6; }
  50% { transform: translateY(-20rpx) translateX(-10rpx) rotate(-3deg); opacity: 0.4; }
  75% { transform: translateY(-60rpx) translateX(30rpx) rotate(8deg); opacity: 0.7; }
}

/* 手机容器 */
.mobile-container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  min-height: 100vh;
  position: relative;
  z-index: 10;
  box-sizing: border-box;
}

/* 顶部导航 */
.top-navigation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 96rpx 32rpx 32rpx;
  position: relative;
  z-index: 20;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8px);
  transition: background-color 0.2s ease;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.nav-icon {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.nav-center {
  text-align: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
}

.nav-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.nav-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8px);
  position: relative;
  transition: background-color 0.2s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.action-icon {
  font-size: 40rpx;
  color: white;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ef4444;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
}

/* 积分头部 */
.points-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  margin: 0 32rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 32rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

.points-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.points-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.points-icon {
  font-size: 40rpx;
  color: #ec4899;
}

.points-details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.points-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.2;
}

.points-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  line-height: 1.2;
}

.vip-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.vip-badge {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 40rpx;
  padding: 8rpx 24rpx;
  color: white;
  font-size: 28rpx;
  line-height: 1.2;
}

.gift-btn {
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
}

.gift-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.gift-icon {
  font-size: 32rpx;
  color: white;
}

/* 分类标签 */
.category-tabs {
  padding: 32rpx 0;
}

.tabs-scroll {
  white-space: nowrap;
}

.tabs-container {
  display: flex;
  gap: 16rpx;
  padding: 0 32rpx;
}

.tab-btn {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border: none;
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  transition: all 0.2s ease;
  min-width: 120rpx;
  justify-content: center;
}

.tab-btn.active {
  background: rgba(255, 255, 255, 0.9);
  color: #ec4899;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.tab-btn:active {
  transform: scale(0.95);
}

.tab-emoji {
  font-size: 32rpx;
}

.tab-name {
  font-size: 28rpx;
}

/* 限时特惠横幅 */
.special-banner {
  margin: 0 32rpx 32rpx;
}

.banner-content {
  background: linear-gradient(135deg, #fbbf24 0%, #f472b6 50%, #8b5cf6 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
}

.banner-left {
  display: flex;
  flex-direction: column;
}

.banner-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner-right {
  text-align: right;
}

.banner-time-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.banner-time {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  display: block;
}

/* 商品网格 */
.product-grid {
  flex: 1;
  padding-bottom: 64rpx;
}

.products-container {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  padding: 0 32rpx;
  justify-content: space-between;
}

.product-card {
  width: calc(50% - 12rpx);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(8px);
  border-radius: 32rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.product-card:active {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.15);
}

/* 商品图片 */
.product-image-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.product-image {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 24rpx;
  background: #fdf2f8;
  object-fit: cover;
}

.limited-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: linear-gradient(135deg, #ec4899 0%, #8b5cf6 100%);
  color: white;
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.limited-icon {
  font-size: 24rpx;
}

.limited-text {
  font-size: 20rpx;
  font-weight: 500;
}

.rating-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(8px);
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.star-icon {
  font-size: 24rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #374151;
}

/* 商品信息 */
.product-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.product-name {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-description {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.sold-count {
  font-size: 24rpx;
  color: #9ca3af;
}

.price-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.points-price {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.points-amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #ec4899;
}

.points-label {
  font-size: 28rpx;
  color: #ec4899;
}

.original-price {
  font-size: 24rpx;
  color: #9ca3af;
  text-decoration: line-through;
}

.exchange-btn {
  width: 100%;
  background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.exchange-btn:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #db2777 0%, #ec4899 100%);
}

.exchange-text {
  color: white;
}

/* 响应式布局优化 */
@media screen and (max-width: 320px) {
  .mobile-container {
    max-width: 100%;
  }
  
  .products-container {
    padding: 0 16rpx;
    gap: 16rpx;
  }
  
  .product-card {
    width: calc(50% - 8rpx);
    padding: 16rpx;
  }
  
  .tab-btn {
    min-width: 100rpx;
    padding: 12rpx 24rpx;
  }
}

@media screen and (min-width: 750px) {
  .mobile-container {
    max-width: 750rpx;
  }
  
  .products-container {
    padding: 0 32rpx;
    gap: 24rpx;
  }
  
  .product-card {
    width: calc(50% - 12rpx);
    padding: 24rpx;
  }
}

/* 确保文字不会被截断 */
.tab-btn {
  overflow: visible;
  text-overflow: unset;
}

.points-details {
  overflow: visible;
}

.price-info {
  overflow: visible;
}

/* 修复可能的布局溢出问题 */
.product-card {
  overflow: hidden;
}

.product-name,
.product-description {
  word-break: break-word;
  overflow-wrap: break-word;
}
