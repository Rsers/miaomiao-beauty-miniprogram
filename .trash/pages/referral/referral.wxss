/* 推荐奖励页面样式 */

/* 页面容器 */
.referral-container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 渐变背景 */
.referral-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #fdf2f8 0%, #f3e8ff 50%, #e0e7ff 100%);
  z-index: 1;
}

/* 装饰元素 */
.decorative-elements {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 2;
}

.decorative-circle {
  position: absolute;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);
  border-radius: 50%;
}

.decorative-circle-1 {
  width: 128px;
  height: 128px;
  top: -32px;
  right: 32px;
}

.decorative-circle-2 {
  width: 96px;
  height: 96px;
  bottom: 32px;
  left: -32px;
}

/* 浮动爱心动画 */
.floating-hearts {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.heart-animation {
  position: absolute;
  font-size: 20px;
  opacity: 0.3;
  animation: float-heart 6s infinite ease-in-out;
}

.heart-0 { top: 20%; left: 10%; animation-delay: 0s; }
.heart-1 { top: 40%; right: 15%; animation-delay: 1.2s; }
.heart-2 { top: 60%; left: 20%; animation-delay: 2.4s; }
.heart-3 { top: 80%; right: 25%; animation-delay: 3.6s; }
.heart-4 { top: 30%; left: 50%; animation-delay: 4.8s; }

@keyframes float-heart {
  0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); opacity: 0.3; }
  25% { transform: translateY(-20px) translateX(10px) rotate(5deg); opacity: 0.6; }
  50% { transform: translateY(-10px) translateX(-5px) rotate(-3deg); opacity: 0.4; }
  75% { transform: translateY(-30px) translateX(15px) rotate(8deg); opacity: 0.7; }
}

/* 手机容器 */
.mobile-container {
  width: 100%;
  max-width: 384px;
  margin: 0 auto;
  min-height: 100vh;
  background: transparent;
  position: relative;
  z-index: 10;
  box-sizing: border-box;
}

/* 顶部导航 */
.top-navigation {
  position: relative;
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 48px 16px 0;
}

.nav-btn {
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  transition: background-color 0.2s ease;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.nav-icon {
  font-size: 18px;
  color: white;
  font-weight: bold;
}

.nav-title {
  font-size: 18px;
  font-weight: 500;
  color: white;
}

/* 主内容区域 */
.main-content {
  padding: 0 16px 32px;
  box-sizing: border-box;
}

/* 推荐头部 */
.referral-header {
  background: linear-gradient(135deg, #f472b6 0%, #ec4899 50%, #db2777 100%);
  margin: 0 -16px;
  padding: 24px 16px 32px;
  border-radius: 0 0 24px 24px;
  position: relative;
  overflow: hidden;
}

.header-content {
  text-align: center;
  color: white;
  position: relative;
  z-index: 10;
}

.app-title-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-bottom: 8px;
}

.crown-icon {
  font-size: 20px;
  color: #fbbf24;
}

.app-title {
  font-size: 20px;
  font-weight: 500;
}

.app-subtitle {
  font-size: 14px;
  color: #fce7f3;
  margin-bottom: 24px;
}

/* 累计收益卡片 */
.earnings-card {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 16px;
  padding: 16px;
  margin-bottom: 24px;
}

.earnings-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  margin-bottom: 8px;
}

.sparkle-icon {
  font-size: 16px;
  color: #fbbf24;
}

.earnings-label {
  font-size: 12px;
  color: #fce7f3;
}

.earnings-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 4px;
}

.currency-symbol {
  font-size: 24px;
  color: #fbbf24;
}

.amount-main {
  font-size: 32px;
  font-weight: bold;
}

.amount-decimal {
  font-size: 18px;
  color: #fce7f3;
}

/* 猫咪吉祥物 */
.cat-mascot {
  display: flex;
  justify-content: center;
}

.mascot-image {
  width: 64px;
  height: 64px;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.3);
}

/* 邀请码区域 */
.invite-code-section {
  margin-top: -32px;
  position: relative;
  z-index: 20;
}

.invite-card {
  background: white;
  border-radius: 16px;
  padding: 24px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  border: 1px solid #fce7f3;
}

.invite-header {
  text-align: center;
  margin-bottom: 16px;
}

.invite-title {
  font-size: 16px;
  color: #db2777;
  font-weight: 500;
}

.code-display {
  background: linear-gradient(135deg, #fdf2f8 0%, #fce7f3 100%);
  border-radius: 12px;
  padding: 16px;
  text-align: center;
  margin-bottom: 16px;
}

.invite-code {
  font-size: 24px;
  font-weight: bold;
  color: #db2777;
  letter-spacing: 4px;
  display: block;
  margin-bottom: 8px;
}

.code-description {
  font-size: 12px;
  color: #6b7280;
}

.action-buttons {
  display: flex;
  gap: 12px;
}

.copy-btn, .share-btn {
  flex: 1;
  height: 44px;
  border: none;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  font-size: 14px;
  transition: transform 0.2s ease;
}

.copy-btn {
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
  color: white;
}

.share-btn {
  background: white;
  border: 1px solid #f3e8ff;
  color: #db2777;
}

.copy-btn:active, .share-btn:active {
  transform: scale(0.98);
}

.copy-icon, .share-icon {
  font-size: 16px;
}

/* 统计数据区域 */
.stats-section {
  margin-top: 16px;
}

.stats-card {
  background: white;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid #f3f4f6;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
}

.stat-item {
  text-align: center;
}

.stat-icon-wrapper {
  width: 40px;
  height: 40px;
  background: #f9fafb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 8px;
}

.stat-icon {
  font-size: 20px;
}

.users-icon { color: #3b82f6; }
.active-icon { color: #10b981; }
.coins-icon { color: #f59e0b; }

.stat-value {
  font-size: 18px;
  color: #111827;
  font-weight: 500;
  display: block;
}

.stat-unit {
  font-size: 12px;
  color: #6b7280;
  display: block;
}

.stat-label {
  font-size: 12px;
  color: #9ca3af;
  margin-top: 4px;
  display: block;
}

/* 区域标题 */
.section-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 12px;
}

.section-icon {
  font-size: 18px;
}

.section-title {
  font-size: 16px;
  color: #db2777;
  font-weight: 500;
  flex-grow: 1;
}

.gift-badge {
  font-size: 10px;
  background: #fdf2f8;
  color: #db2777;
  padding: 4px 8px;
  border-radius: 12px;
}

/* VIP礼品卡区域 */
.vip-gift-cards-section {
  margin-top: 24px;
}

.gift-cards-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.gift-card {
  background: white;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid #f3f4f6;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12px;
}

.card-icon-wrapper {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-icon-wrapper.purple-gradient {
  background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
}

.card-icon-wrapper.yellow-gradient {
  background: linear-gradient(135deg, #eab308 0%, #f97316 100%);
}

.card-icon {
  font-size: 24px;
  color: white;
}

.card-info {
  flex-grow: 1;
}

.card-title-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 4px;
}

.card-title {
  font-size: 16px;
  color: #111827;
  font-weight: 500;
}

.available-badge {
  font-size: 10px;
  background: #fef3c7;
  color: #d97706;
  padding: 2px 6px;
  border-radius: 8px;
}

.card-subtitle {
  font-size: 12px;
  color: #6b7280;
  margin-bottom: 8px;
}

.price-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.current-price {
  font-size: 16px;
  color: #db2777;
  font-weight: 500;
}

.original-price {
  font-size: 12px;
  color: #9ca3af;
  text-decoration: line-through;
}

.transfer-btn {
  background: linear-gradient(135deg, #ec4899 0%, #db2777 100%);
  color: white;
  border: none;
  border-radius: 8px;
  padding: 8px 16px;
  font-size: 12px;
  transition: transform 0.2s ease;
}

.transfer-btn:active {
  transform: scale(0.98);
}

.card-features {
  display: flex;
  gap: 8px;
  margin-top: 12px;
  flex-wrap: wrap;
}

.feature-tag {
  font-size: 10px;
  background: #f9fafb;
  color: #6b7280;
  padding: 4px 8px;
  border-radius: 8px;
}

/* 奖励等级区域 */
.reward-tiers-section {
  margin-top: 24px;
}

.reward-tiers-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.reward-tier {
  background: white;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid #f3f4f6;
  position: relative;
  overflow: hidden;
}

.reward-tier.achieved {
  border-color: #10b981;
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
}

.achievement-badge {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #eab308 0%, #f59e0b 100%);
  color: white;
  font-size: 10px;
  padding: 4px 12px;
  border-radius: 0 0 0 12px;
}

.tier-content {
  display: flex;
  align-items: center;
  gap: 12px;
}

.tier-icon-wrapper {
  width: 48px;
  height: 48px;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tier-icon-wrapper.blue {
  background: #3b82f6;
}

.tier-icon-wrapper.green {
  background: #10b981;
}

.tier-icon-wrapper.purple {
  background: #8b5cf6;
}

.tier-icon {
  font-size: 24px;
  color: white;
}

.tier-info {
  flex-grow: 1;
}

.tier-title-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 4px;
}

.tier-title {
  font-size: 16px;
  color: #111827;
  font-weight: 500;
}

.achieved-icon {
  font-size: 16px;
  color: #10b981;
}

.tier-description {
  font-size: 12px;
  color: #6b7280;
  margin-bottom: 8px;
}

.progress-container {
  display: flex;
  align-items: center;
  gap: 8px;
}

.progress-bar {
  flex-grow: 1;
  height: 8px;
  background: #f3f4f6;
  border-radius: 4px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #ec4899;
  border-radius: 4px;
  transition: width 0.3s ease;
}

.progress-fill.achieved {
  background: #10b981;
}

.progress-text {
  font-size: 12px;
  color: #6b7280;
}

.tier-reward {
  text-align: right;
}

.reward-amount {
  font-size: 16px;
  color: #db2777;
  font-weight: 500;
  display: block;
}

.reward-status {
  font-size: 10px;
  background: #dcfce7;
  color: #166534;
  padding: 2px 6px;
  border-radius: 8px;
  margin-top: 4px;
}

/* 用户好评区域 */
.social-proof-section {
  margin-top: 24px;
  margin-bottom: 24px;
}

.testimonials-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 16px;
}

.testimonial-card {
  background: white;
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  border: 1px solid #f3f4f6;
  display: flex;
  gap: 12px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
}

.testimonial-content {
  flex-grow: 1;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 4px;
}

.user-name {
  font-size: 14px;
  color: #111827;
  font-weight: 500;
}

.star-rating {
  display: flex;
  gap: 2px;
}

.star {
  font-size: 12px;
}

.testimonial-text {
  font-size: 14px;
  color: #6b7280;
  margin-bottom: 8px;
}

.earnings-badge {
  display: inline-block;
}

.earnings-text {
  font-size: 10px;
  background: #fdf2f8;
  color: #db2777;
  padding: 4px 8px;
  border-radius: 8px;
}

/* 成就统计 */
.achievements-card {
  background: linear-gradient(135deg, #fdf2f8 0%, #fce7f3 100%);
  border-radius: 16px;
  padding: 16px;
}

.achievements-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16px;
}

.achievement-item {
  text-align: center;
}

.achievement-icon {
  font-size: 24px;
  display: block;
  margin-bottom: 4px;
}

.achievement-value {
  font-size: 14px;
  color: #111827;
  font-weight: 500;
  display: block;
}

.achievement-label {
  font-size: 10px;
  color: #6b7280;
  margin-top: 2px;
  display: block;
}
