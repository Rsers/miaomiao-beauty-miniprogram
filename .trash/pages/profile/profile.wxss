/* 个人资料页面样式 */

/* 页面容器 */
.profile-container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 渐变背景 */
.profile-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #f472b6 0%, #ec4899 50%, #8b5cf6 100%);
  z-index: 1;
}

/* 装饰元素 */
.decorative-elements {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
  z-index: 2;
}

.decorative-circle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  filter: blur(120rpx);
}

.decorative-circle-1 {
  width: 512rpx;
  height: 512rpx;
  top: -256rpx;
  right: 256rpx;
}

.decorative-circle-2 {
  width: 384rpx;
  height: 384rpx;
  bottom: 192rpx;
  left: -192rpx;
}

/* 浮动爱心动画 */
.floating-hearts {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.heart-animation {
  position: absolute;
  font-size: 40rpx;
  opacity: 0.3;
  animation: float-heart 6s infinite ease-in-out;
}

.heart-0 { top: 20%; left: 10%; animation-delay: 0s; }
.heart-1 { top: 40%; right: 15%; animation-delay: 1.2s; }
.heart-2 { top: 60%; left: 20%; animation-delay: 2.4s; }
.heart-3 { top: 80%; right: 25%; animation-delay: 3.6s; }
.heart-4 { top: 30%; left: 50%; animation-delay: 4.8s; }

@keyframes float-heart {
  0%, 100% { transform: translateY(0) translateX(0) rotate(0deg); opacity: 0.3; }
  25% { transform: translateY(-40rpx) translateX(20rpx) rotate(5deg); opacity: 0.6; }
  50% { transform: translateY(-20rpx) translateX(-10rpx) rotate(-3deg); opacity: 0.4; }
  75% { transform: translateY(-60rpx) translateX(30rpx) rotate(8deg); opacity: 0.7; }
}

/* 手机容器 */
.mobile-container {
  width: 100%;
  max-width: 750rpx;
  margin: 0 auto;
  min-height: 100vh;
  position: relative;
  z-index: 10;
  box-sizing: border-box;
}

/* 顶部导航 */
.top-navigation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 96rpx 32rpx 32rpx;
  position: relative;
  z-index: 20;
}

.nav-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8px);
  transition: background-color 0.2s ease;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.nav-icon {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.nav-center {
  text-align: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
}

.nav-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.nav-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(8px);
  transition: background-color 0.2s ease;
}

.action-btn:active {
  background: rgba(255, 255, 255, 0.3);
}

.action-icon {
  font-size: 40rpx;
  color: white;
}

/* 滚动内容 */
.scroll-content {
  height: calc(100vh - 200rpx);
  padding-bottom: 32rpx;
}

.content-container {
  padding: 0 32rpx;
}

/* 用户资料卡片 */
.user-profile-card {
  position: relative;
  background: linear-gradient(135deg, #f472b6 0%, #ec4899 50%, #8b5cf6 100%);
  border-radius: 48rpx;
  padding: 48rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}

.profile-bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.bg-circle {
  position: absolute;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.bg-circle-1 {
  width: 256rpx;
  height: 256rpx;
  top: -128rpx;
  right: 128rpx;
}

.bg-circle-2 {
  width: 192rpx;
  height: 192rpx;
  bottom: 96rpx;
  left: -96rpx;
}

.profile-content {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar-section {
  position: relative;
}

.avatar-frame {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  padding: 8rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.user-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: white;
  object-fit: cover;
}

.vip-crown {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 64rpx;
  height: 64rpx;
  background: #fbbf24;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.crown-icon {
  font-size: 32rpx;
  color: #92400e;
}

.user-info {
  flex: 1;
  color: white;
}

.user-name-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.user-name {
  font-size: 40rpx;
  font-weight: 500;
  color: white;
}

.vip-badge {
  background: #fbbf24;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.vip-text {
  font-size: 24rpx;
  color: #92400e;
  font-weight: 500;
}

.user-title {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.rating-section {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.star-icon {
  font-size: 32rpx;
}

.rating-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 16rpx;
}

/* 会员等级卡片 */
.membership-card {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(244, 114, 182, 0.1);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #1f2937;
}

.membership-badge {
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.membership-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
}

.membership-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.membership-icon {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.membership-details {
  flex: 1;
}

.membership-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.membership-desc {
  font-size: 28rpx;
  color: #6b7280;
}

/* 经验值进度条 */
.progress-section {
  margin-bottom: 32rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #6b7280;
}

.progress-value {
  font-size: 28rpx;
  color: #ec4899;
  font-weight: 500;
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background: #e5e7eb;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #8b5cf6 0%, #ec4899 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.progress-tip {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 猫咪徽章 */
.badges-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.badge-item {
  text-align: center;
}

.badge-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 8rpx;
}

.badge-icon.bg-yellow-100 { background: #fef3c7; }
.badge-icon.bg-pink-100 { background: #fce7f3; }
.badge-icon.bg-purple-100 { background: #f3e8ff; }
.badge-icon.bg-orange-100 { background: #fed7aa; }

.badge-emoji {
  font-size: 40rpx;
}

.badge-name {
  font-size: 24rpx;
  color: #6b7280;
}

/* 我的数据卡片 */
.stats-card {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(244, 114, 182, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  border-radius: 24rpx;
  padding: 32rpx;
  border: 2rpx solid;
}

.stat-item.stat-points {
  background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%);
  border-color: #fbbf24;
}

.stat-item.stat-invites {
  background: linear-gradient(135deg, #fce7f3 0%, #f3e8ff 100%);
  border-color: #ec4899;
}

.stat-item.stat-achievements {
  background: linear-gradient(135deg, #f3e8ff 0%, #e0e7ff 100%);
  border-color: #8b5cf6;
}

.stat-item.stat-level {
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  border-color: #10b981;
}

.stat-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.stat-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stat-item.stat-points .stat-icon { background: #f59e0b; }
.stat-item.stat-invites .stat-icon { background: #ec4899; }
.stat-item.stat-achievements .stat-icon { background: #8b5cf6; }
.stat-item.stat-level .stat-icon { background: #10b981; }

.stat-emoji {
  font-size: 32rpx;
}

.trend-icon {
  font-size: 32rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.stat-item.stat-points .stat-value { color: #92400e; }
.stat-item.stat-invites .stat-value { color: #be185d; }
.stat-item.stat-achievements .stat-value { color: #7c3aed; }
.stat-item.stat-level .stat-value { color: #047857; }

.stat-label {
  font-size: 28rpx;
  font-weight: 500;
}

.stat-item.stat-points .stat-label { color: #b45309; }
.stat-item.stat-invites .stat-label { color: #be185d; }
.stat-item.stat-achievements .stat-label { color: #7c3aed; }
.stat-item.stat-level .stat-label { color: #047857; }

/* 功能菜单 */
.function-menu {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(244, 114, 182, 0.1);
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
}

.menu-item {
  text-align: center;
  transition: transform 0.2s ease;
}

.menu-item:active {
  transform: scale(0.95);
}

.menu-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
}

.menu-icon.bg-pink-100 { background: #fce7f3; }
.menu-icon.bg-purple-100 { background: #f3e8ff; }
.menu-icon.bg-orange-100 { background: #fed7aa; }
.menu-icon.bg-blue-100 { background: #dbeafe; }
.menu-icon.bg-red-100 { background: #fee2e2; }
.menu-icon.bg-green-100 { background: #dcfce7; }
.menu-icon.bg-yellow-100 { background: #fef3c7; }
.menu-icon.bg-indigo-100 { background: #e0e7ff; }

.menu-emoji {
  font-size: 48rpx;
}

.menu-label {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.3;
}

/* 设置菜单 */
.settings-menu {
  background: white;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(244, 114, 182, 0.1);
}

.settings-list {
  margin-top: 32rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 16rpx;
  transition: background-color 0.2s ease;
}

.setting-item:active {
  background: #f9fafb;
}

.setting-item.logout-item:active {
  background: #fef2f2;
}

.setting-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.setting-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f4f6;
}

.setting-icon.logout-icon {
  background: #fee2e2;
}

.setting-emoji {
  font-size: 32rpx;
}

.setting-label {
  font-size: 32rpx;
  color: #1f2937;
}

.logout-text {
  color: #dc2626;
}

.setting-arrow {
  font-size: 32rpx;
  color: #9ca3af;
}

.logout-arrow {
  color: #dc2626;
}

/* 响应式布局优化 */
@media screen and (max-width: 320px) {
  .mobile-container {
    max-width: 100%;
  }
  
  .content-container {
    padding: 0 16rpx;
  }
  
  .menu-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 24rpx;
  }
  
  .badges-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 16rpx;
  }
}

@media screen and (min-width: 750px) {
  .mobile-container {
    max-width: 750rpx;
  }
  
  .content-container {
    padding: 0 32rpx;
  }
  
  .menu-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 32rpx;
  }
  
  .badges-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 24rpx;
  }
}
