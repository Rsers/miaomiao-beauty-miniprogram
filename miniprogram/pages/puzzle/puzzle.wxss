/* 拼图协作页面样式 */

.puzzle-container {
  width: 100%;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

/* 渐变背景 */
.puzzle-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #fecaca 0%, #fbb6ce 50%, #e9d5ff 100%);
  z-index: 1;
}

/* 背景装饰元素 */
.background-decorations {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 2;
}

.decoration-cat,
.decoration-heart,
.decoration-sparkle {
  position: absolute;
  color: #fbb6ce;
  opacity: 0.6;
}

.decoration-1 {
  top: 40px;
  left: 16px;
  font-size: 32px;
  animation: float1 4s ease-in-out infinite;
}

.decoration-2 {
  top: 128px;
  right: 24px;
  font-size: 24px;
  opacity: 0.5;
  animation: float2 3s ease-in-out infinite 1s;
}

.decoration-3 {
  bottom: 128px;
  left: 32px;
  font-size: 20px;
  opacity: 0.4;
  animation: float3 5s ease-in-out infinite 2s;
}

@keyframes float1 {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-10px) rotate(5deg); }
}

@keyframes float2 {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(10px) rotate(-5deg); }
}

@keyframes float3 {
  0%, 100% { transform: translateY(0) translateX(0); }
  50% { transform: translateY(-15px) translateX(5px); }
}

/* 手机容器 */
.mobile-container {
  max-width: 384px;
  margin: 0 auto;
  min-height: 100vh;
  background: transparent;
  position: relative;
  z-index: 10;
}

/* 顶部导航 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px;
  padding-top: 48px;
}

.nav-btn {
  width: 40px;
  height: 40px;
  background: transparent;
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s ease;
}

.nav-btn:active {
  background: rgba(255, 255, 255, 0.2);
}

.nav-icon {
  font-size: 24px;
  color: white;
}

.header-title {
  font-size: 20px;
  font-weight: 500;
  color: white;
}

/* 主内容区域 */
.main-content {
  padding: 16px;
  padding-bottom: 32px;
}

/* 拼图网格区域 */
.puzzle-grid-section {
  margin-bottom: 24px;
}

.puzzle-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(8px);
  border-radius: 24px;
  padding: 24px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

/* 进度头部 */
.progress-header {
  margin-bottom: 24px;
}

.progress-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12px;
}

.progress-title {
  font-size: 18px;
  color: #be185d;
}

.progress-percentage {
  font-size: 16px;
  color: #ec4899;
  font-weight: 500;
}

.progress-bar {
  width: 100%;
  height: 12px;
  background: #fce7f3;
  border-radius: 6px;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
  border-radius: 6px;
  transition: width 1s ease-out;
}

/* 3x3拼图网格 */
.puzzle-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px;
  aspect-ratio: 1;
}

.puzzle-piece {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12px;
  overflow: hidden;
  border: 2px solid #fce7f3;
  transition: transform 0.2s ease;
}

.puzzle-piece:active {
  transform: scale(0.95);
}

/* 已完成拼图 */
.completed-piece {
  position: relative;
  width: 100%;
  height: 100%;
}

.piece-image {
  width: 100%;
  height: 100%;
}

.sparkle-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(254, 240, 138, 0.3) 0%, rgba(251, 182, 206, 0.3) 100%);
  animation: sparkle 2s ease-in-out infinite 3s;
}

@keyframes sparkle {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

.solved-by-indicator {
  position: absolute;
  bottom: 4px;
  right: 4px;
  background: #ec4899;
  color: white;
  padding: 2px 4px;
  border-radius: 4px;
  font-size: 10px;
}

/* 正在拼图中 */
.solving-piece {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #fdf2f8 0%, #fce7f3 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: solving 1.5s ease-in-out infinite;
}

@keyframes solving {
  0%, 100% { opacity: 0.5; }
  50% { opacity: 1; }
}

.puzzle-icon {
  font-size: 24px;
}

/* 未完成拼图 */
.uncompleted-piece {
  width: 100%;
  height: 100%;
  background: #fdf2f8;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px dashed #fbb6ce;
}

.cat-icon {
  font-size: 18px;
  color: #f472b6;
}

/* 完成庆祝效果 */
.celebration-effect {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: none;
  z-index: 20;
}

.celebration-emoji {
  font-size: 48px;
  animation: celebrate 2s ease-in-out infinite;
}

@keyframes celebrate {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(5deg); }
}

/* 团队成员区域 */
.team-members-section {
  margin-bottom: 24px;
}

.team-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(8px);
  border-radius: 16px;
  padding: 16px;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.team-header {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 16px;
}

.team-icon {
  font-size: 18px;
}

.team-title {
  font-size: 18px;
  color: #be185d;
}

.members-list {
  max-height: 192px;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px;
  border-radius: 12px;
  transition: background-color 0.2s ease;
}

.member-item:active {
  background: #fdf2f8;
}

.member-avatar-container {
  position: relative;
}

.member-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 2px solid #fce7f3;
}

.status-indicator {
  position: absolute;
  bottom: -2px;
  right: -2px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2px solid white;
}

.status-indicator.online {
  background: #22c55e;
}

.status-indicator.solving {
  background: #ec4899;
}

.status-indicator.offline {
  background: #d1d5db;
}

.solving-animation {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  border: 2px solid #ec4899;
  animation: solving-pulse 1.5s ease-in-out infinite;
}

@keyframes solving-pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.2); }
}

.member-info {
  flex: 1;
  min-width: 0;
}

.member-name-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 2px;
}

.member-name {
  font-size: 14px;
  font-weight: 500;
  color: #374151;
}

.invite-badge {
  background: #fdf2f8;
  color: #ec4899;
  border: 1px solid #fce7f3;
  padding: 2px 6px;
  border-radius: 8px;
}

.invite-text {
  font-size: 10px;
}

.member-status {
  font-size: 12px;
  color: #6b7280;
}

.member-achievement {
  display: flex;
  align-items: center;
  gap: 2px;
}

.achievement-icon {
  font-size: 12px;
}

.achievement-count {
  font-size: 12px;
  color: #ec4899;
  font-weight: 500;
}

/* 社交分享区域 */
.social-actions-section {
  margin-bottom: 24px;
}

/* 主要邀请按钮 */
.invite-button-container {
  margin-bottom: 16px;
}

.invite-button {
  width: 100%;
  height: 56px;
  background: linear-gradient(135deg, #ec4899 0%, #f472b6 100%);
  color: white;
  border: none;
  border-radius: 16px;
  box-shadow: 0 4px 16px rgba(236, 72, 153, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 18px;
  transition: transform 0.2s ease;
}

.invite-button:active {
  transform: scale(0.98);
}

.invite-icon {
  font-size: 20px;
}

.friends-emoji {
  font-size: 20px;
  animation: wave 2s ease-in-out infinite 3s;
}

@keyframes wave {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(10deg); }
  75% { transform: rotate(-10deg); }
}

/* 次要操作按钮 */
.secondary-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
  margin-bottom: 16px;
}

.action-btn {
  height: 48px;
  background: rgba(255, 255, 255, 0.9);
  border: 2px solid;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  font-size: 14px;
  transition: transform 0.2s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn:disabled {
  opacity: 0.5;
}

.wechat-btn {
  border-color: #22c55e;
  color: #16a34a;
}

.wechat-btn:active {
  background: #f0fdf4;
}

.export-btn {
  border-color: #8b5cf6;
  color: #7c3aed;
}

.export-btn:active {
  background: #faf5ff;
}

.action-icon {
  font-size: 16px;
}

/* 完成庆祝 */
.completion-celebration {
  background: linear-gradient(135deg, #fef3c7 0%, #fdf2f8 100%);
  padding: 16px;
  border-radius: 16px;
  border: 1px solid #fce7f3;
  margin-bottom: 16px;
}

.celebration-content {
  text-align: center;
}

.celebration-title {
  font-size: 20px;
  margin-bottom: 8px;
  display: block;
  animation: celebrate 2s ease-in-out infinite;
}

.celebration-subtitle {
  font-size: 12px;
  color: #be185d;
  display: block;
}

/* 提示信息 */
.hint-info {
  background: rgba(255, 255, 255, 0.6);
  padding: 12px;
  border-radius: 12px;
  text-align: center;
}

.hint-text {
  font-size: 10px;
  color: #6b7280;
}

/* 演示按钮 */
.demo-section {
  text-align: center;
}

.demo-button {
  background: rgba(255, 255, 255, 0.8);
  color: #ec4899;
  border: 1px solid #fce7f3;
  border-radius: 12px;
  padding: 12px 24px;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin: 0 auto;
}

.demo-icon {
  font-size: 16px;
}

/* 浮动爱心动画 */
.floating-hearts {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 5;
}

.floating-heart {
  position: absolute;
  color: #fbb6ce;
  font-size: 18px;
  opacity: 0.3;
  animation: floatUp 8s ease-out infinite;
}

.heart-1 {
  left: 20%;
  animation-delay: 0s;
}

.heart-2 {
  left: 35%;
  animation-delay: 1.5s;
}

.heart-3 {
  left: 50%;
  animation-delay: 3s;
}

.heart-4 {
  left: 65%;
  animation-delay: 4.5s;
}

.heart-5 {
  left: 80%;
  animation-delay: 6s;
}

@keyframes floatUp {
  0% {
    bottom: -20px;
    opacity: 0;
    transform: scale(0.5);
  }
  10% {
    opacity: 0.3;
    transform: scale(1);
  }
  90% {
    opacity: 0.3;
  }
  100% {
    bottom: 400px;
    opacity: 0;
    transform: scale(0.5);
  }
}
