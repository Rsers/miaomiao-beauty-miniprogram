/* privacy.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 20rpx;
  margin: 20rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 承诺框 */
.promise-box {
  margin: 20rpx;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  text-align: center;
}

.promise-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.promise-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 24rpx;
}

.promise-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.95);
  line-height: 1.8;
  margin-bottom: 8rpx;
  text-align: left;
  padding-left: 20rpx;
}

.promise-text:last-child {
  margin-bottom: 0;
}

.content {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #ff9a9e;
}

.section-content {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  text-align: justify;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  gap: 20rpx;
}

.agree-btn {
  flex: 1;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: #fff;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.back-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 32rpx;
}

.agree-btn:active {
  opacity: 0.8;
}

.back-btn:active {
  background-color: #eee;
}

.section-content strong {
  color: #ff6b6b;
  font-weight: bold;
}
