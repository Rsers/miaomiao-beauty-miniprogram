/* 启动页面样式 */

.splash-container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 渐变背景 */
.splash-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);
  z-index: 1;
}

/* 装饰元素 */
.decorative-elements {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  z-index: 2;
}

/* 浮动爪印 */
.paw-print {
  position: absolute;
  opacity: 0.2;
  animation: float 3s ease-in-out infinite;
}

.paw-print-1 {
  top: 80px;
  left: 32px;
  animation-delay: 0s;
}

.paw-print-2 {
  top: 128px;
  right: 48px;
  animation-delay: 1s;
}

.paw-print-3 {
  bottom: 160px;
  left: 64px;
  animation-delay: 2s;
}

.paw-print-4 {
  bottom: 240px;
  right: 32px;
  animation-delay: 0.5s;
}

.paw-icon {
  font-size: 16px;
  color: white;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-10px) rotate(5deg);
  }
}

/* 主内容区域 */
.main-content {
  position: relative;
  z-index: 10;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32px;
  animation: slideInUp 0.8s ease-out;
}

/* 滑入动画 */
@keyframes slideInUp {
  from {
    transform: translateY(100px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Logo容器 */
.logo-container {
  margin-bottom: 32px;
}

.logo-wrapper {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 50%;
  padding: 32px;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  animation: bounce 2s ease-in-out infinite;
}

/* 弹跳动画 */
@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-5px);
  }
}

/* 小猫Logo */
.cat-logo {
  width: 80px;
  height: 80px;
  position: relative;
  animation: logoAppear 1s ease-out 0.5s both;
}

/* Logo出现动画 */
@keyframes logoAppear {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 猫头 */
.cat-head {
  position: absolute;
  top: 27px;
  left: 18px;
  width: 44px;
  height: 36px;
  background: linear-gradient(135deg, #FFEAA7 0%, #FAB1A0 100%);
  border-radius: 50%;
  animation: headAppear 0.3s ease-out 0.5s both;
}

/* 猫耳朵 */
.cat-ear {
  position: absolute;
  width: 0;
  height: 0;
  animation: earAppear 0.3s ease-out 0.6s both;
}

.cat-ear-left {
  top: 14px;
  left: 20px;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 16px solid #FFEAA7;
  transform: rotate(-45deg);
  transform-origin: center bottom;
}

.cat-ear-right {
  top: 14px;
  right: 20px;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 16px solid #FFEAA7;
  transform: rotate(45deg);
  transform-origin: center bottom;
}

/* 内耳 */
.cat-inner-ear {
  position: absolute;
  width: 0;
  height: 0;
  animation: innerEarAppear 0.2s ease-out 0.7s both;
}

.cat-inner-ear-left {
  top: 18px;
  left: 23px;
  border-left: 8px solid transparent;
  border-right: 8px solid transparent;
  border-bottom: 12px solid #FFB6C1;
  transform: rotate(-45deg);
}

.cat-inner-ear-right {
  top: 18px;
  right: 23px;
  border-left: 8px solid transparent;
  border-right: 8px solid transparent;
  border-bottom: 12px solid #FFB6C1;
  transform: rotate(45deg);
}

/* 眼睛 */
.cat-eye {
  position: absolute;
  width: 6px;
  height: 8px;
  background: #2D1B69;
  border-radius: 50%;
  animation: eyeAppear 0.2s ease-out 0.8s both;
}

.cat-eye-left {
  top: 34px;
  left: 25px;
}

.cat-eye-right {
  top: 34px;
  right: 25px;
}

/* 眼高光 */
.cat-eye-highlight {
  position: absolute;
  width: 2px;
  height: 3px;
  background: white;
  border-radius: 50%;
  animation: highlightAppear 0.2s ease-out 0.9s both;
}

.cat-eye-highlight-left {
  top: 33px;
  left: 26px;
}

.cat-eye-highlight-right {
  top: 33px;
  right: 26px;
}

/* 鼻子 */
.cat-nose {
  position: absolute;
  top: 39px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 3px solid transparent;
  border-right: 3px solid transparent;
  border-top: 6px solid #FF69B4;
  animation: noseAppear 0.2s ease-out 1s both;
}

/* 嘴巴 */
.cat-mouth {
  position: absolute;
  top: 44px;
  width: 10px;
  height: 2px;
  background: #2D1B69;
  border-radius: 2px;
  animation: mouthAppear 0.3s ease-out 1.1s both;
}

.cat-mouth-left {
  left: 30px;
  transform: rotate(-15deg);
}

.cat-mouth-right {
  right: 30px;
  transform: rotate(15deg);
}

/* 胡须 */
.cat-whisker {
  position: absolute;
  height: 2px;
  background: #2D1B69;
  border-radius: 1px;
  animation: whiskerAppear 0.2s ease-out 1.2s both;
}

.cat-whisker-left-1 {
  top: 37px;
  left: 15px;
  width: 10px;
}

.cat-whisker-left-2 {
  top: 42px;
  left: 15px;
  width: 10px;
  animation-delay: 1.3s;
}

.cat-whisker-right-1 {
  top: 37px;
  right: 15px;
  width: 10px;
}

.cat-whisker-right-2 {
  top: 42px;
  right: 15px;
  width: 10px;
  animation-delay: 1.3s;
}

/* 出现动画 */
@keyframes headAppear {
  from { transform: scale(0); }
  to { transform: scale(1); }
}

@keyframes earAppear {
  from { 
    transform: rotate(-45deg) scale(0);
    opacity: 0;
  }
  to { 
    transform: rotate(0deg) scale(1);
    opacity: 1;
  }
}

@keyframes innerEarAppear {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes eyeAppear {
  from { transform: scaleY(0); }
  to { transform: scaleY(1); }
}

@keyframes highlightAppear {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes noseAppear {
  from { transform: translateX(-50%) scale(0); }
  to { transform: translateX(-50%) scale(1); }
}

@keyframes mouthAppear {
  from { transform: scale(0); }
  to { transform: scale(1); }
}

@keyframes whiskerAppear {
  from { transform: scaleX(0); }
  to { transform: scaleX(1); }
}

/* 应用名称 */
.app-title {
  text-align: center;
  margin-bottom: 16px;
  animation: titleAppear 0.5s ease-out 0.8s both;
}

.app-name {
  font-size: 32px;
  font-weight: bold;
  color: white;
  text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
  display: block;
  margin-bottom: 8px;
}

.title-underline {
  width: 64px;
  height: 4px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 2px;
  margin: 0 auto;
  animation: underlineAppear 0.5s ease-out 1.2s both;
}

/* 标题出现动画 */
@keyframes titleAppear {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes underlineAppear {
  from { width: 0; }
  to { width: 64px; }
}

/* 标语 */
.app-slogan {
  margin-bottom: 48px;
  animation: sloganAppear 0.5s ease-out 1s both;
}

.slogan-text {
  font-size: 20px;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 3px 3px rgba(0, 0, 0, 0.2);
}

/* 标语出现动画 */
@keyframes sloganAppear {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 加载区域 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: loadingAppear 0.5s ease-out 1.4s both;
}

/* 加载区域出现动画 */
@keyframes loadingAppear {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 爪印加载动画 */
.paw-loading {
  display: flex;
  justify-content: center;
  margin-bottom: 24px;
}

.paw-loading-item {
  margin: 0 8px;
  animation: pawLoading 1.2s ease-in-out infinite;
}

.paw-loading-item:nth-child(1) { animation-delay: 0s; }
.paw-loading-item:nth-child(2) { animation-delay: 0.2s; }
.paw-loading-item:nth-child(3) { animation-delay: 0.4s; }
.paw-loading-item:nth-child(4) { animation-delay: 0.6s; }

.paw-loading-icon {
  font-size: 24px;
  color: rgba(255, 255, 255, 0.7);
}

/* 爪印加载动画 */
@keyframes pawLoading {
  0%, 100% {
    transform: scale(1);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.3);
    opacity: 1;
  }
}

/* 加载文字 */
.loading-text {
  margin-bottom: 16px;
}

.loading-text-content {
  font-size: 14px;
  color: rgba(255, 255, 255, 0.8);
  animation: textBlink 2s ease-in-out infinite;
}

/* 文字闪烁动画 */
@keyframes textBlink {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 1; }
}

/* 加载点 */
.loading-dots {
  display: flex;
  justify-content: center;
}

.dot {
  width: 12px;
  height: 12px;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  margin: 0 4px;
  animation: dotPulse 1.5s ease-in-out infinite;
}

.dot:nth-child(1) { animation-delay: 0s; }
.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

/* 点脉冲动画 */
@keyframes dotPulse {
  0%, 100% {
    transform: scale(1);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.2);
    opacity: 1;
  }
}

/* 跳过按钮 */
.skip-button {
  position: absolute;
  top: 60px;
  right: 20px;
  z-index: 15;
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8px);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.3);
  animation: skipButtonAppear 0.5s ease-out 2s both;
}

.skip-text {
  font-size: 14px;
  color: white;
  font-weight: 500;
}

/* 跳过按钮出现动画 */
@keyframes skipButtonAppear {
  from {
    opacity: 0;
    transform: translateX(20px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 深度覆盖层 */
.depth-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.05), transparent);
  pointer-events: none;
  z-index: 3;
}
