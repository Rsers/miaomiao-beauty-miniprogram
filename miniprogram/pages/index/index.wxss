/**index.wxss**/
page {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%) !important;
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%) !important;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 用户头像区域 */
.user-avatar-section {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx !important;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 16rpx auto;
  background: transparent;
  border: none;
  overflow: hidden;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  display: block;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.avatar-tip {
  font-size: 24rpx;
  color: #666666;
  display: block;
}

/* 昵称输入区域 */
.nickname-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.nickname-label {
  margin-bottom: 16rpx;
}

.nickname-label text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.nickname-input:focus {
  border-color: #ff9a9e;
  background: #ffffff;
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.highlight-badge {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 20rpx;
  flex-wrap: wrap;
}

.badge-text {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

/* 功能介绍区域 */
.features-section {
  margin-bottom: 40rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.feature-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.feature-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

.highlight-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.85));
  border: 2rpx solid rgba(255, 107, 107, 0.2);
  position: relative;
  overflow: hidden;
}

.highlight-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ff6b6b, #ff8e8e, #ff6b6b);
}

.feature-tag {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  margin-top: 8rpx;
  display: inline-block;
}

/* 竞品对比区域 */
.comparison-section {
  margin-bottom: 40rpx;
  padding: 30rpx 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.comparison-table {
  margin-top: 20rpx;
}

.comparison-header {
  display: flex;
  background: linear-gradient(135deg, #ff9a9e, #fecfef);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  font-weight: bold;
  color: white;
  text-align: center;
}

.comparison-row {
  display: flex;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 8rpx;
  align-items: center;
  text-align: center;
  border: 1rpx solid rgba(255, 107, 107, 0.1);
}

.feature-column {
  flex: 2;
  font-weight: 500;
  color: #333;
}

.our-tool {
  flex: 1.5;
  color: #ff6b6b;
  font-weight: bold;
}

.competitor {
  flex: 1.5;
  color: #666;
}

.our-value {
  flex: 1.5;
  color: #28a745;
  font-weight: bold;
}

.comp-value {
  flex: 1.5;
  color: #dc3545;
  font-size: 22rpx;
}

.feature-name {
  flex: 2;
  font-weight: 500;
  color: #333;
}

/* 图片处理功能区域 */
.processing-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 上传区域 */
.upload-section {
  margin-bottom: 40rpx;
}

.upload-area {
  padding: 80rpx 40rpx;
  text-align: center;
  border: 4rpx dashed #e0e0e0;
  border-radius: 20rpx;
  margin: 20rpx;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #ff9a9e;
  background: rgba(255, 154, 158, 0.05);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 图片预览 */
.image-preview {
  padding: 30rpx;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.image-info {
  margin-bottom: 20rpx;
}

.file-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.file-size {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.change-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 40rpx;
}

.enhance-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
}

.enhance-btn.processing {
  background: #ccc;
  box-shadow: none;
}

.enhance-btn:disabled {
  opacity: 0.6;
}

/* 结果展示区域 */
.result-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.result-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.preview-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  font-weight: normal;
}

.preview-tip {
  display: block;
  font-size: 22rpx;
  color: #ff9a9e;
  margin-top: 8rpx;
  font-weight: normal;
}

.comparison-container {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.image-container {
  flex: 1;
  text-align: center;
}

.image-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.image-wrapper {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.image-wrapper:active {
  transform: scale(0.98);
}

.result-image {
  width: 100%;
  max-height: 300rpx;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
}

.preview-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.image-wrapper:active .preview-overlay {
  opacity: 1;
}

.preview-icon {
  font-size: 48rpx;
  color: white;
}

.image-size {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  font-weight: normal;
}

.file-size-info {
  display: block;
  font-size: 20rpx;
  color: #bbb;
  margin-top: 5rpx;
  font-weight: normal;
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.download-btn {
  flex: 1;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 158, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn {
  flex: 1;
  background: linear-gradient(135deg, #4CAF50 0%, #8BC34A 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 26rpx;
  font-weight: bold;
}

/* 处理进度覆盖层 */
.processing-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.processing-content {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin: 40rpx;
  max-width: 500rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff9a9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.processing-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.progress-text {
  display: block;
  font-size: 48rpx;
  color: #ff9a9e;
  margin-bottom: 20rpx;
  font-weight: bold;
}

/* 进度条样式 */
.progress-bar-container {
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
  position: relative;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.processing-hint {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 付费套餐区域样式 */
.payment-section {
  margin: 40rpx 0;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-subtitle {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  font-weight: normal;
}

.payment-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 30rpx;
}

.payment-card {
  position: relative;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
  transition: all 0.3s ease;
}

.payment-card:active {
  transform: scale(0.98);
}

.premium-card {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  transform: scale(1.02);
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.unlimited-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.popular-badge {
  position: absolute;
  top: -12rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #ff4444 0%, #ff6666 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 68, 68, 0.4);
}

.badge-text {
  font-size: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.package-name {
  font-size: 32rpx;
  font-weight: bold;
}

.package-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.package-features {
  margin-bottom: 20rpx;
}

.feature-item {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
  opacity: 0.9;
}

.package-desc {
  font-size: 22rpx;
  opacity: 0.8;
  text-align: center;
  margin-top: 15rpx;
}

.savings-tag {
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 18rpx;
  font-weight: bold;
}

.vip-tag {
  position: absolute;
  bottom: 15rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 18rpx;
  font-weight: bold;
}

/* 用户状态显示 */
.user-status {
  margin-top: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  display: flex;
  justify-content: space-between;
}

.status-item {
  text-align: center;
  flex: 1;
}

.status-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.status-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.status-value.free {
  color: #999;
}

.status-value.basic {
  color: #ff9a9e;
}

.status-value.premium {
  color: #ff6b6b;
}

.status-value.unlimited {
  color: #667eea;
}

/* 调试按钮区域 */
.debug-section {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.debug-btn {
  width: 100%;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(40, 167, 69, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
}

.debug-btn:active {
  transform: scale(0.98);
}

.debug-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.debug-text {
  font-size: 24rpx;
  font-weight: bold;
}

/* 法律条款区域样式 */
.legal-section {
  margin: 40rpx 20rpx 20rpx;
  padding: 30rpx;
  background-color: #f8f9fa;
  border-radius: 15rpx;
  text-align: center;
}

.legal-links {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
}

.legal-link {
  font-size: 28rpx;
  color: #ff9a9e;
  text-decoration: underline;
  cursor: pointer;
}

.legal-separator {
  font-size: 28rpx;
  color: #ccc;
  margin: 0 20rpx;
}

.legal-notice {
  display: block;
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}