/**index.wxss - Precise Tailwind to WXSS conversion from Figma Make**/

/* === Base Utilities === */
.min-h-screen { min-height: 100vh; }
.bg-gray-50 { background-color: #f9fafb; }
.bg-white { background-color: #ffffff; }
.max-w-sm { max-width: 768rpx; }  /* 24rem = 384px = 768rpx */
.mx-auto { margin-left: auto; margin-right: auto; }
.flex-col { display: flex; flex-direction: column; }
.relative { position: relative; }
.absolute { position: absolute; }
.inset-0 { top: 0; right: 0; bottom: 0; left: 0; }
.z-10 { z-index: 10; }
.flex { display: flex; }
.flex-1 { flex: 1; }
.grid { display: grid; }
.block { display: block; }
.hidden { display: none; }

/* === Positioning === */
.top-3 { top: 24rpx; }      /* 0.75rem = 12px = 24rpx */
.top-6 { top: 48rpx; }
.top-8 { top: 64rpx; }
.top-20 { top: 160rpx; }
.top-1-2 { top: 50%; }
.top-1-3 { top: 33.333%; }
.right-3 { right: 24rpx; }
.right-6 { right: 48rpx; }
.right-8 { right: 64rpx; }
.right-12 { right: 96rpx; }
.right-20 { right: 160rpx; }
.bottom-4 { bottom: 32rpx; }
.bottom-6 { bottom: 48rpx; }
.bottom-12 { bottom: 96rpx; }
.bottom-16 { bottom: 128rpx; }
.bottom-20 { bottom: 160rpx; }
.left-4 { left: 32rpx; }
.left-6 { left: 48rpx; }
.left-8 { left: 64rpx; }
.left-16 { left: 128rpx; }

/* === Spacing === */
.p-1 { padding: 8rpx; }
.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }
.p-6 { padding: 48rpx; }
.p-8 { padding: 64rpx; }
.px-2 { padding-left: 16rpx; padding-right: 16rpx; }
.px-3 { padding-left: 24rpx; padding-right: 24rpx; }
.px-4 { padding-left: 32rpx; padding-right: 32rpx; }
.px-6 { padding-left: 48rpx; padding-right: 48rpx; }
.py-1 { padding-top: 8rpx; padding-bottom: 8rpx; }
.py-2 { padding-top: 16rpx; padding-bottom: 16rpx; }
.py-3 { padding-top: 24rpx; padding-bottom: 24rpx; }
.py-4 { padding-top: 32rpx; padding-bottom: 32rpx; }
.mb-1 { margin-bottom: 8rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-4 { margin-bottom: 32rpx; }
.mb-6 { margin-bottom: 48rpx; }
.mt-2 { margin-top: 16rpx; }
.mt-4 { margin-top: 32rpx; }
.mt-6 { margin-top: 48rpx; }
.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }
.gap-4 { gap: 32rpx; }
.space-y-3 > view:not(:last-child) { margin-bottom: 24rpx; }
.space-y-4 > view:not(:last-child) { margin-bottom: 32rpx; }
.space-y-6 > view:not(:last-child) { margin-bottom: 48rpx; }

/* === Sizing === */
.w-1 { width: 8rpx; }
.w-6 { width: 48rpx; }
.w-8 { width: 64rpx; }
.w-10 { width: 80rpx; }
.w-16 { width: 128rpx; }
.w-full { width: 100%; }
.h-1 { height: 8rpx; }
.h-6 { height: 48rpx; }
.h-8 { height: 64rpx; }
.h-10 { height: 80rpx; }
.h-64 { height: 512rpx; }  /* 16rem = 256px = 512rpx */
.max-h-96 { max-height: 768rpx; }  /* 24rem = 384px = 768rpx */

/* === Grid === */
.grid-cols-2 { grid-template-columns: repeat(2, 1fr); }
.grid-cols-3 { grid-template-columns: repeat(3, 1fr); }

/* === Flex === */
.items-center { align-items: center; }
.justify-between { justify-content: space-between; }
.justify-center { justify-content: center; }

/* === Text === */
.text-xs { font-size: 24rpx; }     /* 0.75rem = 12px = 24rpx */
.text-sm { font-size: 28rpx; }     /* 0.875rem = 14px = 28rpx */
.text-lg { font-size: 36rpx; }     /* 1.125rem = 18px = 36rpx */
.text-xl { font-size: 40rpx; }     /* 1.25rem = 20px = 40rpx */
.text-2xl { font-size: 48rpx; }    /* 1.5rem = 24px = 48rpx */
.text-3xl { font-size: 60rpx; }    /* 1.875rem = 30px = 60rpx */
.text-4xl { font-size: 72rpx; }    /* 2.25rem = 36px = 72rpx */
.text-6xl { font-size: 120rpx; }   /* 3.75rem = 60px = 120rpx */
.text-center { text-align: center; display: block; }
.text-white { color: #ffffff; }
.text-gray-500 { color: #6b7280; }
.text-gray-600 { color: #4b5563; }
.text-gray-700 { color: #374151; }
.text-gray-800 { color: #1f2937; }
.text-green-600 { color: #059669; }
.text-blue-600 { color: #2563eb; }
.tracking-wide { letter-spacing: 1rpx; }
.leading-relaxed { line-height: 1.625; }
.drop-shadow-md { filter: drop-shadow(0 3px 3px rgba(0,0,0,0.12)); }

/* === Opacity === */
.opacity-20 { opacity: 0.2; }
.opacity-25 { opacity: 0.25; }
.opacity-30 { opacity: 0.3; }
.opacity-60 { opacity: 0.6; }
.opacity-80 { opacity: 0.8; }
.opacity-90 { opacity: 0.9; }
.opacity-95 { opacity: 0.95; }

/* === Rotation === */
.rotate-6 { transform: rotate(6deg); }
.rotate-12 { transform: rotate(12deg); }
.rotate-minus-6 { transform: rotate(-6deg); }
.rotate-minus-12 { transform: rotate(-12deg); }

/* === Border Radius === */
.rounded-full { border-radius: 9999rpx; }
.rounded-xl { border-radius: 24rpx; }    /* 0.75rem = 12px = 24rpx */
.rounded-2xl { border-radius: 32rpx; }   /* 1rem = 16px = 32rpx */
.rounded-lg { border-radius: 16rpx; }

/* === Borders === */
.border-2 { border-width: 4rpx; }
.border-gray-100 { border-color: #f3f4f6; }
.border-gray-200 { border-color: #e5e7eb; }

/* === Backgrounds === */
.bg-gray-100 { background-color: #f3f4f6; }
.bg-orange-400 { background-color: #fb923c; }

/* === Shadows === */
.shadow-lg { box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1); }

/* === Overflow === */
.overflow-hidden { overflow: hidden; }

/* ===== Header Section ===== */
.header-section {
  background: linear-gradient(135deg, #f472b6 0%, #f9a8d4 50%, #fecdd3 100%);
  padding: 64rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}

/* Gradient Text (bg-clip-text not supported in miniprogram) */
.gradient-text {
  color: #ffffff;
  font-weight: bold;
}

/* ===== Upload Area ===== */
.upload-area {
  background: linear-gradient(90deg, #fed7aa 0%, #fdba74 100%);
  border: 6rpx dashed #f472b6;
  border-radius: 32rpx;
  padding: 64rpx;
  text-align: center;
  transition: transform 0.3s ease;
}

.upload-area:active {
  transform: scale(0.98);
}

/* ===== Processing Overlay ===== */
.processing-overlay {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ===== Progress Circle ===== */
.progress-circle-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 32rpx;
}

.progress-svg {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.progress-bg-circle {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  border: 16rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  box-sizing: border-box;
}

.progress-fill-circle {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  border: 16rpx solid #ffffff;
  border-radius: 50%;
  box-sizing: border-box;
  stroke-dasharray: 251.2;
  stroke-dashoffset: 0;
  transform: rotate(-90deg);
  transition: stroke-dashoffset 0.3s ease-out;
  /* 模拟stroke效果 */
  clip-path: circle(50% at 50% 50%);
}

.progress-text-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ===== Buttons ===== */
button {
  border: none;
  outline: none;
}

.btn-reselect {
  flex: 1;
  background-color: #fb923c;
  color: #ffffff;
  padding: 24rpx 48rpx;
  border-radius: 9999rpx;
  transition: all 0.3s ease;
  box-shadow: 0 10px 15px -3px rgba(251,146,60,0.3);
}

.btn-reselect:active {
  transform: scale(0.95);
}

.btn-reselect[disabled] {
  opacity: 0.5;
}

.btn-start {
  flex: 1;
  background: linear-gradient(90deg, #9333ea 0%, #7e22ce 100%);
  color: #ffffff;
  padding: 24rpx 48rpx;
  border-radius: 9999rpx;
  transition: all 0.3s ease;
  box-shadow: 0 10px 15px -3px rgba(147,51,234,0.3);
}

.btn-start:active {
  transform: scale(0.95);
}

.btn-start[disabled] {
  opacity: 0.5;
}

.btn-download {
  width: 100%;
  background: linear-gradient(90deg, #10b981 0%, #059669 100%);
  color: #ffffff;
  padding: 32rpx 48rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 10px 15px -3px rgba(16,185,129,0.3);
}

.btn-download:active {
  transform: scale(0.95);
}

.btn-secondary {
  flex: 1;
  background-color: #f3f4f6;
  color: #374151;
  padding: 24rpx 48rpx;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}

.btn-secondary:active {
  transform: scale(0.95);
}

.btn-share {
  flex: 1;
  background: linear-gradient(90deg, #ec4899 0%, #db2777 100%);
  color: #ffffff;
  padding: 24rpx 48rpx;
  border-radius: 32rpx;
  transition: all 0.3s ease;
  box-shadow: 0 10px 15px -3px rgba(236,72,153,0.3);
}

.btn-share:active {
  transform: scale(0.95);
}

.btn-retry {
  background-color: #f3f4f6;
  color: #374151;
  padding: 16rpx 32rpx;
  border-radius: 9999rpx;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.btn-retry:active {
  transform: scale(0.95);
}

/* ===== Image Container ===== */
.image-container {
  position: relative;
  cursor: pointer;
}

.image-overlay {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0);
  transition: background-color 0.2s ease;
  border-radius: 24rpx;
}

.image-container:active .image-overlay {
  background-color: rgba(0, 0, 0, 0.1);
}

.zoom-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ===== Slider Comparison ===== */
.slider-container {
  position: relative;
  height: 640rpx;  /* h-80 = 20rem = 320px = 640rpx */
  border-radius: 24rpx;
  overflow: hidden;
  border: 4rpx solid #e5e7eb;
}

.slider-image-base,
.slider-image-enhanced {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.slider-image-enhanced {
  filter: contrast(1.1) brightness(1.05) saturate(1.1);
  /* clip-path: inset(0 50% 0 0); */
  width: 50%;
}

.slider-divider {
  position: absolute;
  left: 50%;
  top: 0;
  bottom: 0;
  width: 8rpx;
  background-color: #ffffff;
  box-shadow: 0 10px 15px -3px rgba(0,0,0,0.3);
  transform: translateX(-50%);
}

.slider-handle {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 64rpx;
  height: 64rpx;
  background-color: #ffffff;
  border-radius: 50%;
  box-shadow: 0 10px 15px -3px rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transform: translate(-50%, -50%);
}

.slider-label-left,
.slider-label-right {
  position: absolute;
  bottom: 32rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  padding: 8rpx 24rpx;
  border-radius: 9999rpx;
  font-size: 28rpx;
}

.slider-label-left {
  left: 32rpx;
}

.slider-label-right {
  right: 32rpx;
}

/* ===== Stats Card ===== */
.stats-card {
  margin-top: 48rpx;
  background: linear-gradient(90deg, #dbeafe 0%, #e9d5ff 100%);
  border-radius: 32rpx;
  padding: 32rpx;
}

.stats-header {
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
  font-size: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
}

/* ===== Features Card ===== */
.features-card {
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 10px 15px -3px rgba(0,0,0,0.05);
  padding: 40rpx;
  border: 2rpx solid #f3f4f6;
}

.feature-item {
  text-align: center;
  padding: 24rpx;
  border-radius: 24rpx;
  background: linear-gradient(180deg, #f9fafb 0%, #f3f4f6 100%);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #f472b6 0%, #ec4899 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #ffffff;
  box-shadow: 0 4px 6px -1px rgba(244,114,182,0.3);
  margin: 0 auto 16rpx;
}

/* ===== Privacy Card ===== */
.privacy-card {
  background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 70%, #4f46e5 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 10px 15px -3px rgba(124,58,237,0.3);
  border: 2rpx solid rgba(124,58,237,0.2);
}

.privacy-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.privacy-check {
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(74, 222, 128, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ===== Toggle Container ===== */
.toggle-container {
  background-color: #f3f4f6;
  border-radius: 9999rpx;
  padding: 8rpx;
  display: flex;
}

.toggle-btn {
  padding: 16rpx 32rpx;
  border-radius: 9999rpx;
  font-size: 28rpx;
  color: #4b5563;
  background-color: transparent;
  transition: all 0.3s ease;
}

.toggle-btn.active {
  background-color: #ffffff;
  color: #1f2937;
  box-shadow: 0 1px 3px 0 rgba(0,0,0,0.1);
}

/* ===== Animations ===== */
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.animate-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

/* ===== Result Section (slide up animation) ===== */
.result-section {
  animation: slideUp 0.5s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(40rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 隐私卡片文本样式修复 */
.privacy-title {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 8rpx;
  font-weight: 500;
  line-height: 1.4;
}

.privacy-desc {
  display: block;
  font-size: 24rpx;
  color: #ffffff;
  opacity: 0.9;
  line-height: 1.5;
}

/* 核心特点文本强制换行 */
.feature-item text {
  display: block;
  width: 100%;
  white-space: normal;
  word-break: keep-all;
}
