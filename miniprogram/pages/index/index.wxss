/**index.wxss**/
page {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%) !important;
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%) !important;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

/* 功能介绍区域 */
.features-section {
  margin-bottom: 40rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.feature-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.feature-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.feature-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feature-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 图片处理功能区域 */
.processing-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 上传区域 */
.upload-section {
  margin-bottom: 40rpx;
}

.upload-area {
  padding: 80rpx 40rpx;
  text-align: center;
  border: 4rpx dashed #e0e0e0;
  border-radius: 20rpx;
  margin: 20rpx;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #ff9a9e;
  background: rgba(255, 154, 158, 0.05);
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 图片预览 */
.image-preview {
  padding: 30rpx;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.image-info {
  margin-bottom: 20rpx;
}

.file-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.file-size {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.change-btn {
  background: #f5f5f5;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 40rpx;
}

.enhance-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.3);
}

.enhance-btn.processing {
  background: #ccc;
  box-shadow: none;
}

.enhance-btn:disabled {
  opacity: 0.6;
}

/* 结果展示区域 */
.result-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  text-align: center;
  margin-bottom: 30rpx;
}

.result-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.preview-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  font-weight: normal;
}

.comparison-container {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.image-container {
  flex: 1;
  text-align: center;
}

.image-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.image-wrapper {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.image-wrapper:active {
  transform: scale(0.98);
}

.result-image {
  width: 100%;
  max-height: 300rpx;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
}

.preview-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.image-wrapper:active .preview-overlay {
  opacity: 1;
}

.preview-icon {
  font-size: 48rpx;
  color: white;
}

/* 下载按钮 */
.download-section {
  text-align: center;
}

.download-btn {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 158, 0.3);
}

/* 处理进度覆盖层 */
.processing-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.processing-content {
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin: 40rpx;
  max-width: 500rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff9a9e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.processing-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.processing-hint {
  display: block;
  font-size: 24rpx;
  color: #666;
}