  0% {
    transform: translateY(-100rpx) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.3;
  }
  90% {
    opacity: 0.3;
  }
  100% {
    transform: translateY(800rpx) rotate(360deg);
    opacity: 0;
  }
}

